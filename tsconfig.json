{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@model/*": [
        "./model/*"
      ]
    }
  }
}